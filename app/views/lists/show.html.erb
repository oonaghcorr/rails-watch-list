<p style="color: green"><%= notice %></p>

<%= render @list %>

<div class="text-center">
  <%# <%= link_to "Edit this list", edit_list_path(@list) %> |
  <%= link_to "Back to lists", lists_path %> %>
  <%= button_to "Destroy this list", @list, method: :delete, class: "btn btn-danger mt-1" %>
</div>

<div class="movie-container">
  <% @list.movies.each do |movie| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.movie_poster_url %>)">
      <%= movie.name %>
      <%= movie.poster_url %>
      <%= image_tag movie.poster_url %>
    </div>

  <% end %>
</div>

<%= link_to "add new movie", new_list_bookmark_path(@list), class:"btn btn-primary" %>
